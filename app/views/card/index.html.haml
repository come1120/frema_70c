= render 'items/header'
.mypage__container
  .mypage__inner
    = render 'mypage/parts/side_list'
    .mypage-main.col-9
      .mypage-main.col-10
        %h2.header_title
          支払い方法
        .single-container
          %section.creditcard_section
            %h3 クレジットカード一覧
            - if @card.present?
              .container
                .creditcard-info
                  = image_tag asset_path("material/icon/#{@card_image}"),width:'34',height:'20', alt:'test'
                  %p.creditcard-info__number
                    = "**** **** **** " + @card_info.last4
                  %p.creditcard-info__period 
                  = @exp_month + " / " + @exp_year
                  -# = button_to "削除する", creditcard_path(@card), method: :delete, class:"creditcard-info__delete"
            - else
              .new-card
                = link_to new_card_path(current_user), class:"new-card-btn" do
                  %i.far.fa-credit-card 
                  クレジットカードを追加する
= render 'items/banner'
= render 'items/footer'