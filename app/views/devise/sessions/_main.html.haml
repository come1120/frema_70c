.login-main
  .login__panel
    .login__panel__no-account__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .no-account
          %p アカウントをお持ちでない方はこちら
      - if devise_mapping.registerable? && controller_name != "registrations"
        .new-account
          = link_to "新規会員登録", new_registration_path(resource_name)
        .facebook
          = link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn-def--facebook" do
            %i.fab.fa-facebook
            %span<>
            Facebookでログイン 
        .google
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn-def--google" do
            %i.fab.fa-google
            %span<>
            Googleでログイン 
      
        
    .login__panel__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .mail-field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input-text"
        .password-field
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-text"
        = f.submit "ログイン", class: "btn"
        = render "devise/shared/links"

        
        
        

