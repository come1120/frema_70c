.pickup__container
  %h2.head #{@nickname}さんのマイページ
  .product_box
    .product__head
      =link_to "お気に入り商品", root_path
    .product__lists
      - @favorites.each do |favorite|
        .product__list
          =link_to item_path(favorite.item.id) do
            -favorite.item.images.each do |image|
              = image_tag (favorite.item.images[0].url)
            .product__list--body
              %h3= favorite.item.name
              .details
                %ul
                  %li= "￥#{favorite.item.price}"
                %p (税込)
= paginate @favorites