= render 'items/header'
.search
  .search-container
    .search-left
      -# = render 'searches/form-bar'
    .search-right
      %section.items-box-container
        -if @search.present?
          %h2.search-result-head
            =@search
            %span.search-result-head-text
              の検索結果
          .search-result-number
            ="1-#{@items.count}件表示"
        -else
          %h2.search-result-nil
            新着商品
        .items-box-content
          - @items[0..2].each do |item|
            .product__list
              =link_to item_path(item.id) do
                -item.images.first(1).each do |image|
                  =image_tag image.image.to_s, class: "product__list--img"
                .product__list--body
                  %h3= item.name
                  .details
                    %ul
                      %li= "¥" + item.price.to_s
                      %li
                        =icon("fas", "star", class: "likeIcon")
                        0
                    %p (税込)
= render 'items/banner'
= render 'items/footer'